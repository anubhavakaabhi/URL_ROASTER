    <div class="main-container">
        <div class="card" id="mainCard">
            <div class="header">
                <div class="logo-container">
                    <div class="logo-ring"></div>
                    <div class="logo">ðŸ”¥</div>
                </div>
                <h1>URL Roaster</h1>
                <p class="subtitle">Enter any website URL and let our AI deliver a brutally honest roast</p>
            </div>

            <!-- Features showcase -->
            <div class="features">
                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-robot"></i>
                    </div>
                    <div class="feature-text">AI Powered</div>
                </div>
                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <div class="feature-text">Instant</div>
                </div>
                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-fire-flame-curved"></i>
                    </div>
                    <div class="feature-text">Brutal</div>
                </div>
            </div>

            <form id="roastForm" action="/roast" method="get">
                <div class="input-group">
                    <i class="fas fa-globe input-icon"></i>
                    <input
                        id="urlInput"
                        name="url"
                        type="url"
                        placeholder="https://example.com"
                        required
                        autocomplete="off"
                    />
                </div>
                <button type="submit" class="submit-btn" id="submitBtn">
                    <span>
                        <i class="fas fa-fire"></i>
                        Roast This Website
                    </span>
                </button>
            </form>

            <div class="loading-container" id="loadingContainer">
                <div class="spinner-container">
                    <div class="spinner-dot"></div>
                    <div class="spinner-dot"></div>
                    <div class="spinner-dot"></div>
                </div>
                <div class="loading-text" id="loadingText">
                    Analyzing website architecture...
                </div>
            </div>

            <footer>
                <span>Crafted with</span>
                <i class="fas fa-heart footer-icon"></i>
                <span>for brutal honesty</span>
            </footer>
        </div>
    </div>

    <script>
        class URLRoaster {
            constructor() {
                this.form = document.getElementById("roastForm");
                this.input = document.getElementById("urlInput");
                this.submitBtn = document.getElementById("submitBtn");
                this.loadingContainer = document.getElementById("loadingContainer");
                this.loadingText = document.getElementById("loadingText");
                this.mainCard = document.getElementById("mainCard");
                
                this.loadingMessages = [
                    "Analyzing website architecture...",
                    "Scanning design patterns...",
                    "Evaluating performance metrics...",
                    "Preparing brutal feedback...",
                    "Almost ready to roast... ðŸ˜ˆ"
                ];
                
                this.init();
            }

            init() {
                this.createParticles();
                this.setupEventListeners();
            }

            createParticles() {
                const particlesContainer = document.getElementById('particles');
                const particleCount = 40;
                
                for (let i = 0; i < particleCount; i++) {
                    const particle = document.createElement('div');
                    particle.className = 'particle';
                    particle.style.left = Math.random() * 100 + '%';
                    particle.style.animationDelay = Math.random() * 10 + 's';
                    particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                    
                    // Random color
                    const colors = ['var(--neon-cyan)', 'var(--neon-pink)', 'var(--flame-orange)'];
                    particle.style.background = colors[Math.floor(Math.random() * colors.length)];
                    
                    particlesContainer.appendChild(particle);
                }
            }

            setupEventListeners() {
                this.form.addEventListener("submit", (e) => this.handleSubmit(e));
                this.input.addEventListener("input", () => this.validateInput());
                
                // Add keyboard shortcuts
                document.addEventListener("keydown", (e) => {
                    if (e.key === "Enter" && e.ctrlKey) {
                        this.form.dispatchEvent(new Event("submit"));
                    }
                });
            }

            validateInput() {
                const value = this.input.value.trim();
                const isValid = value && this.isValidURL(value);
                
                this.submitBtn.disabled = !isValid;
                
                return isValid;
            }

            isValidURL(string) {
                try {
                    new URL(string);
                    return true;
                } catch (_) {
                    return false;
                }
            }

            handleSubmit(e) {
                const value = this.input.value.trim();

                if (!value.startsWith("http")) {
                    e.preventDefault();
                    this.showError("Please enter a valid URL starting with http:// or https://");
                    this.shakeCard();
                    return;
                }

                // Start loading animation
                this.startLoading();
            }

            startLoading() {
                this.submitBtn.classList.add("loading");
                this.submitBtn.innerHTML = '<span><i class="fas fa-spinner fa-spin"></i> Processing...</span>';
                this.loadingContainer.classList.add("show");
                
                // Cycle through loading messages
                let messageIndex = 0;
                this.loadingInterval = setInterval(() => {
                    this.loadingText.textContent = this.loadingMessages[messageIndex];
                    messageIndex = (messageIndex + 1) % this.loadingMessages.length;
                }, 1000);
            }

            showError(message) {
                const inputGroup = this.input.parentElement;
                
                // Remove existing error if any
                const existingError = inputGroup.querySelector('.error-tooltip');
                if (existingError) {
                    existingError.remove();
                }
                
                // Create error tooltip
                const error = document.createElement("div");
                error.className = "error-tooltip";
                error.textContent = message;
                
                inputGroup.style.position = "relative";
                inputGroup.appendChild(error);
                
                setTimeout(() => error.remove(), 3000);
            }

            shakeCard() {
                this.mainCard.classList.add('shake');
                setTimeout(() => {
                    this.mainCard.classList.remove('shake');
                }, 500);
            }
        }

        // Initialize the application
        document.addEventListener("DOMContentLoaded", () => {
            new URLRoaster();
        });

        // Add 3D tilt effect on mouse move
        document.addEventListener("mousemove", (e) => {
            const card = document.querySelector(".card");
            const rect = card.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            
            const rotateX = (y - centerY) / 30;
            const rotateY = (centerX - x) / 30;
            
            card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
        });

        document.addEventListener("mouseleave", () => {
            const card = document.querySelector(".card");
            card.style.transform = "perspective(1000px) rotateX(0) rotateY(0)";
        });

        // Add click ripple effects
        document.querySelectorAll('.feature').forEach(feature => {
            feature.addEventListener('click', function() {
                const ripple = document.createElement('div');
                ripple.style.position = 'absolute';
                ripple.style.width = '5px';
                ripple.style.height = '5px';
                ripple.style.background = 'var(--neon-cyan)';
                ripple.style.borderRadius = '50%';
                ripple.style.top = '50%';
                ripple.style.left = '50%';
                ripple.style.transform = 'translate(-50%, -50%) scale(0)';
                ripple.style.transition = 'transform 0.6s, opacity 0.6s';
                ripple.style.opacity = '0.5';
                ripple.style.pointerEvents = 'none';
                
                this.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.style.transform = 'translate(-50%, -50%) scale(30)';
                    ripple.style.opacity = '0';
                }, 10);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });
    </script>
</body>
</html>