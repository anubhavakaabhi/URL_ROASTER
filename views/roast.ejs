    <!-- Glowing orbs -->
    <div class="orb orb1"></div>
    <div class="orb orb2"></div>
    <div class="orb orb3"></div>

    <div class="container">
        <div class="header">
            <div class="logo-container">
                <div class="logo-ring"></div>
                <div class="logo">üî•</div>
            </div>
            <h1>URLRoaster</h1>
            <p class="tagline">Maximum Roast Protocol Engaged</p>
        </div>

        <div class="roast-section">
            <div class="roast-title">
                <span class="roast-label">‚óÜ Your Roast</span>
                <span class="severity-indicator glitch" id="severity" data-text="BRUTAL">BRUTAL</span>
            </div>
            <div class="roast-text" id="roast-text">
                <%= roast %><span class="cursor"></span>
            </div>
        </div>

        <div class="url-display">
            <div class="url-label">‚ñ∫ Target Website</div>
            <div class="url-value" id="url-value"><%= url %></div>
        </div>

        <div class="stats-title">
            <span>Diagnostic Report</span>
        </div>

        <div class="stats-grid">
            <div class="stat-card" data-stat="images">
                <div class="stat-icon">üñºÔ∏è</div>
                <div class="stat-value" id="img-count"><%= img %></div>
                <div class="stat-label">Images</div>
            </div>

            <div class="stat-card" data-stat="scripts">
                <div class="stat-icon">‚öôÔ∏è</div>
                <div class="stat-value" id="script-count"><%= script %></div>
                <div class="stat-label">Scripts</div>
            </div>

            <div class="stat-card" data-stat="h1tags">
                <div class="stat-icon">üìù</div>
                <div class="stat-value" id="h1-count"><%= h1 %></div>
                <div class="stat-label">H1 Tags</div>
            </div>
        </div>

        <div class="footer">
            <form action="/" method="GET" class="button-container">
                <button type="submit" class="action-btn">
                    <span>üî• Roast Another URL</span>
                </button>
            </form>
        </div>
    </div>

    <script>
        // Create particle system
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 10 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                
                // Random color
                const colors = ['var(--neon-cyan)', 'var(--neon-pink)', 'var(--flame-orange)'];
                particle.style.background = colors[Math.floor(Math.random() * colors.length)];
                
                particlesContainer.appendChild(particle);
            }
        }

        // Animate numbers with dynamic easing
        function animateValue(id, start, end, duration) {
            const obj = document.getElementById(id);
            const startTime = performance.now();
            
            function update(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                // Ease out cubic
                const easeProgress = 1 - Math.pow(1 - progress, 3);
                const current = Math.floor(start + (end - start) * easeProgress);
                
                obj.textContent = current;
                
                if (progress < 1) {
                    requestAnimationFrame(update);
                } else {
                    obj.textContent = end;
                }
            }
            
            requestAnimationFrame(update);
        }

        // Calculate and display severity
        function calculateSeverity() {
            const imgCount = parseInt(document.getElementById('img-count').textContent);
            const scriptCount = parseInt(document.getElementById('script-count').textContent);
            const h1Count = parseInt(document.getElementById('h1-count').textContent);
            
            const totalIssues = (imgCount > 50 ? 1 : 0) + 
                               (scriptCount > 20 ? 1 : 0) + 
                               (h1Count !== 1 ? 1 : 0);
            
            const severityEl = document.getElementById('severity');
            let severityText = '';
            let severityColor = '';
            
            if (totalIssues === 0) {
                severityText = 'MILD';
                severityColor = '#4caf50';
            } else if (totalIssues === 1) {
                severityText = 'MEDIUM';
                severityColor = '#ffc107';
            } else if (totalIssues === 2) {
                severityText = 'SPICY';
                severityColor = '#ff9800';
            } else {
                severityText = 'BRUTAL';
                severityColor = '#f44336';
            }
            
            severityEl.textContent = severityText;
            severityEl.setAttribute('data-text', severityText);
            severityEl.style.color = severityColor;
        }

        // Enhanced typing effect with variable speed
        function typeWriter(element, text, speed = 30) {
            let i = 0;
            const cursor = element.querySelector('.cursor');
            element.textContent = '';
            element.appendChild(cursor);
            
            function type() {
                if (i < text.length) {
                    const char = text.charAt(i);
                    const textNode = document.createTextNode(char);
                    element.insertBefore(textNode, cursor);
                    i++;
                    
                    // Variable speed based on punctuation
                    let delay = speed;
                    if (char === '.' || char === '!' || char === '?') {
                        delay = speed * 10;
                    } else if (char === ',') {
                        delay = speed * 3;
                    }
                    
                    setTimeout(type, delay);
                }
            }
            
            type();
        }

        // Stat card click effects
        document.querySelectorAll('.stat-card').forEach(card => {
            card.addEventListener('click', function() {
                // Create ripple effect
                const ripple = document.createElement('div');
                ripple.style.position = 'absolute';
                ripple.style.width = '5px';
                ripple.style.height = '5px';
                ripple.style.background = 'var(--neon-cyan)';
                ripple.style.borderRadius = '50%';
                ripple.style.top = '50%';
                ripple.style.left = '50%';
                ripple.style.transform = 'translate(-50%, -50%) scale(0)';
                ripple.style.transition = 'transform 0.6s, opacity 0.6s';
                ripple.style.opacity = '0.5';
                ripple.style.pointerEvents = 'none';
                
                this.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.style.transform = 'translate(-50%, -50%) scale(40)';
                    ripple.style.opacity = '0';
                }, 10);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });

        // Initialize on page load
        window.addEventListener('load', function() {
            // Create particles
            createParticles();
            
            // Get the roast text and apply typing effect
            const roastElement = document.getElementById('roast-text');
            const roastText = roastElement.textContent.trim();
            typeWriter(roastElement, roastText, 40);
            
            // Get stat values
            const imgCount = parseInt(document.getElementById('img-count').textContent);
            const scriptCount = parseInt(document.getElementById('script-count').textContent);
            const h1Count = parseInt(document.getElementById('h1-count').textContent);
            
            // Animate counters after typing
            setTimeout(() => {
                animateValue('img-count', 0, imgCount, 1500);
                animateValue('script-count', 0, scriptCount, 1500);
                animateValue('h1-count', 0, h1Count, 1500);
                
                // Calculate severity after animation
                setTimeout(calculateSeverity, 1600);
            }, roastText.length * 40);
        });

        // Add mousemove parallax effect to container
        document.addEventListener('mousemove', (e) => {
            const container = document.querySelector('.container');
            const { clientX, clientY } = e;
            const { innerWidth, innerHeight } = window;
            
            const xPos = (clientX / innerWidth - 0.5) * 20;
            const yPos = (clientY / innerHeight - 0.5) * 20;
            
            container.style.transform = `perspective(1000px) rotateY(${xPos}deg) rotateX(${-yPos}deg)`;
        });

        // Reset container on mouse leave
        document.addEventListener('mouseleave', () => {
            const container = document.querySelector('.container');
            container.style.transform = '';
        });
    </script>
